{
    "builds": [
        { "src": "public/**/*.php", "use": "vercel-php@0.7.4" },
        { "src": "admin/**/*.php", "use": "vercel-php@0.7.4" },
        { "src": "assets/**/*", "use": "@vercel/static" }
    ],
    "routes": [
        { 
            "src": "/assets/(.*)", 
            "dest": "/assets/$1" 
        },
        { 
            "src": "/admin/(.*)", 
            "dest": "/admin/$1" 
        },
        { 
            "src": "/(.*)", 
            "dest": "/public/$1" 
        }
    ]
}